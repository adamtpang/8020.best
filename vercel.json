{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/app",
            "dest": "frontend/dist/index.html"
        },
        {
            "src": "/app/(.*)",
            "dest": "frontend/dist/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}