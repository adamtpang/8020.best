{
  "version": 2,
  "routes": [
    {
      "src": "/app",
      "dest": "/index.html"
    },
    {
      "src": "/app/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30,
      "memory": 1024,
      "maxPayloadSize": "50mb"
    }
  }
}